var slaying = true
youHit = Math.floor(Math.random() *2)
damageThisRound = Math.floor(Math.random()*5 +1)
totalDamage = 0

while(slaying) {
    if (youHit = 1) {
        console.log("Great Job You Hit the Dragon!")
        totalDamage += damageThisRound
        if (totalDamage >= 4) {
            console.log("The Dragon is Dead!")
            slaying = false
        }
        else {
            youHit = Math.floor(Math.random() *2)
        }
    }
    else {
        console.log("Bummer The Dragon Defeated You.")
    }
    slaying = false
}
